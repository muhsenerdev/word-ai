<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="002-create-words-table" author="muhsenerdev">
        <comment>Create words table</comment>
        <createTable tableName="words">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="text" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="slug" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="part_of_speech" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="cefr_level" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="language" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="created_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="deleted_at" type="timestamptz">
                <constraints nullable="true" />
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>