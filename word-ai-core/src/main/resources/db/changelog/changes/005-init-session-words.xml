<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="005-create-session-words-table" author="muhsenerdev">
        <comment>Create session_words junction table</comment>
        <createTable tableName="session_words">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="session_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_session_words_sessions_id"
                    references="sessions(id)" />
            </column>
            <column name="word_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_session_words_words_id"
                    references="words(id)" />
            </column>
            <column name="learned" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="learned_at" type="timestamptz">
                <constraints nullable="true" />
            </column>

            <column name="created_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="deleted_at" type="timestamptz" />

        </createTable>
    </changeSet>

</databaseChangeLog>