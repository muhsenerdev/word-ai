<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="003-create-cards-table" author="muhsenerdev">
        <comment>Create cards table</comment>
        <createTable tableName="cards">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="source_sentence" type="text">
                <constraints nullable="false" />
            </column>
            <column name="target_sentence" type="text">
                <constraints nullable="false" />
            </column>
            <column name="mappings" type="jsonb">
                <constraints nullable="false" />
            </column>
            <column name="target_language" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="word_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_cards_words_id"
                    references="words(id)" />
            </column>

            <column name="created_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="deleted_at" type="timestamptz">
                <constraints nullable="true" />
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>